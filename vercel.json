{
	"buildCommand": "npm run build",
	"outputDirectory": ".next",
	"framework": "nextjs",
	"regions": ["gru1"],
	"functions": {
		"app/**/*.ts": {
			"maxDuration": 10
		}
	},
	"headers": [
		{
			"source": "/(.*)",
			"headers": [
				{
					"key": "X-Frame-Options",
					"value": "DENY"
				},
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				},
				{
					"key": "Referrer-Policy",
					"value": "strict-origin-when-cross-origin"
				}
			]
		},
		{
			"source": "/manifest.json",
			"headers": [
				{
					"key": "Content-Type",
					"value": "application/manifest+json"
				}
			]
		},
		{
			"source": "/sw.js",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=0, must-revalidate"
				},
				{
					"key": "Service-Worker-Allowed",
					"value": "/"
				}
			]
		}
	],
	"rewrites": [
		{
			"source": "/sw.js",
			"destination": "/sw.js"
		}
	],
	"build": {
		"env": {
			"NODE_ENV": "production"
		}
	}
}
